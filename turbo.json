{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false,
      "dependsOn": ["^db:generate"]
    },
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["package"]
    },
    "build:api": {
      "dependsOn": ["^db:generate", "^db:push", "@seminar-assess/api#build"],
      "outputs": ["apps/api/dist/**"],
      "cache": false
    },
    "package": {
      "dependsOn": ["^package"],
      "outputs": ["dist/**"]
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    }
  }
}
